@using EntityLayer.Concrete
@model List<Faq>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <div class="float-left">
                    <h4 class="card-title">Sıkça Sorulan Sorular Listesi</h4>

                </div>
                <div class="float-right">
                    <a class="btn btn-warning btn-sm" href="/Faq/Add">Soru Ekle</a>

                </div>
            </div>
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Soru
                            </th>
                            <th>
                                Cevap
                            </th>
                            <th>
                                Menü
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" data-toggle="popover-hover" data-content="@item.Title">Soru</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" data-toggle="popover-hover" data-content="@item.Description">Cevap</a>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-danger btn-sm dropdown-toggle" type="button" id="dropdownMenuSizeButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Menü
                                        </button>
                                        <div class="dropdown-menu float-left" aria-labelledby="dropdownMenuSizeButton3">
                                            <h6 class="dropdown-header">Menü</h6>
                                            <a class="dropdown-item" href="/Faq/Edit/@item.FaqId">Düzenle</a>
                                            <a class="dropdown-item" href="/Faq/Delete/@item.FaqId" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



