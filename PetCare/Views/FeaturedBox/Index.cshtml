@using EntityLayer.Concrete
@model List<FeaturedBox>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <div class="float-left">
                    <h4 class="card-title">Öne Çıkan 2</h4>

                </div>
            </div>
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Başlık
                            </th>
                            <th>
                                İçerik
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Menü
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" data-toggle="popover-hover" data-content="@item.Description">İçerik</a>
                                </td>
                                <td>
                                    @item.Icon
                                </td>
                                <td>
                                    <a class="btn btn-outline-warning btn-sm" href="/FeaturedBox/Edit/@item.FeaturedBoxId"><i class="mdi mdi-cog"></i> Düzenle</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

