@using EntityLayer.Concrete
@model List<WorkingHour>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <div class="float-left">
                    <h4 class="card-title">Çalışma Saati Listesi</h4>

                </div>
            </div>
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Gün
                            </th>
                            <th>
                                Çalışma Saati
                            </th>
                            <th>
                                Menü
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Day
                                </td>
                                <td>@item.Hour</td>
                                <td>
                                    <a class="btn btn-outline-warning btn-sm" href="/WorkingHour/Edit/@item.WorkingHourId"><i class="mdi mdi-cog"></i> Düzenle</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

