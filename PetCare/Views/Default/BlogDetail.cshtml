@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<!--Start breadcrumb area-->
<section class="breadcrumb-area" style="background-image: url(/mehedi.asiandevelopers.com/demo/carepress/assets/images/breadcrumb/breadcrumb-1.png);">
    <div class="banner-curve-gray"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content clearfix text-center">
                    <div class="title wow slideInUp animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <h2>@ViewBag.header<span class="dotted"></span></h2>
                    </div>
                    <div class="breadcrumb-menu wow slideInDown animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <ul class="clearfix">
                            <li><a href="/Default/Index">Anasayfa</a></li>
                            <li class="active">@ViewBag.header</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End breadcrumb area-->
<!--Start Blog Style2 Area-->
<section id="blog-area" class="blog-single-area">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-8 col-lg-7">
                    <div class="blog-posts">
                        <div class="single-blog-style2">
                            <div class="text-holder">
                                <!--Start Blog Details Single-->
                                <div class="blog-details-single">
                                    <div class="categories">
                                        <h5>@ViewBag.category</h5>
                                    </div>
                                    <h2 class="blog-title">@item.Title</h2>
                                    <ul class="meta-info">
                                        <li><span class="icon-user"></span><a href="#">@ViewBag.writer</a></li>
                                        <li><span class="icon-calendar"></span><a href="#">@(((DateTime)item.Date).ToString("dd MMMMMMM yyyy"))</a></li>
                                        @*<li><span class="icon-chat"></span><a href="#">35 Comments</a></li>*@
                                    </ul>
                                    <div class="text">
                                        <p>@item.Description</p>
                                    </div>

                                    <div class="blog-details-image-1">
                                        <img src="@item.ImageUrl" alt="">
                                    </div>
                                </div>
                                <!--End Blog Details Single-->
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--Start sidebar Wrapper-->

            <div class="col-xl-4 col-lg-5 col-md-9 col-sm-12">
                <div class="sidebar-wrapper">
                    <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.0s" data-wow-duration="1200ms">
                        <div class="sidebar-about-me-box text-center">
