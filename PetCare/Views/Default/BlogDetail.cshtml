                            <div class="text-holder">
                                <h3>@ViewBag.writer</h3>
                                <p>Hekimlerimize sosyal medya bağlantıları üzerinden ulaşabilirsiniz.</p>
                                <div class="sidebar-social-link">
                                    <ul>

                                        <li>
                                            <a target="_blank" aria-hidden="true" href="mailto:@ViewBag.mail"><i class="fa fa-paper-plane" aria-hidden="true"></i></a>
                                        </li>
                                        <li>
