                                        <li>
                                            <a target="_blank" aria-hidden="true" href="@ViewBag.linkedin"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
